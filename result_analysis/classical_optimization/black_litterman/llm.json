{
    "analysis_task": "black_litterman_classical_optimization_analysis",
  
    "analysis_principle": {
      "optimization_scope": "portfolio_level",
      "result_format": "markdown_tables_only",
      "rationale": "Classical optimization results are best communicated via interpretable summary tables (mean return, risk, drawdown, risk-adjusted ratios). All tabular outputs are rendered as Markdown documents suitable for direct inclusion in IEEE Access manuscripts."
    },
  
    "inputs": {
      "metrics_table": "results/classical_optimization/bl_metrics.parquet",
      "time_sliced_metrics_table": "results/classical_optimization/bl_time_sliced_metrics.parquet",
      "runtime_profile": "results/classical_optimization/bl_runtime_profile.json",
      "metrics_schema": "results/classical_optimization/bl_metrics_schema.json"
    },
  
    "analysis_scope": {
      "level": "portfolio",
      "dimensions": [
        "portfolio_id"
      ],
      "grouping": {
        "primary": "asset_set_id",
        "secondary": "views_confidence_level"
      }
    },
  
    "data_validation": {
      "required_metrics": [
        "mean_return",
        "volatility",
        "sharpe_ratio",
        "sortino_ratio",
        "max_drawdown",
        "calmar_ratio",
        "value_at_risk",
        "conditional_value_at_risk"
      ],
      "consistency_checks": [
        {
          "name": "positive_volatility",
          "rule": "volatility > 0"
        },
        {
          "name": "cvar_ge_var",
          "rule": "conditional_value_at_risk >= value_at_risk"
        }
      ]
    },
  
    "primary_performance_analysis": {
      "return_risk_tradeoff": {
        "metrics": [
          "mean_return",
          "volatility",
          "sharpe_ratio"
        ],
        "aggregation": [
          "mean",
          "median",
          "p95"
        ]
      },
  
      "downside_risk_analysis": {
        "metrics": [
          "max_drawdown",
          "value_at_risk",
          "conditional_value_at_risk",
          "sortino_ratio",
          "calmar_ratio"
        ],
        "aggregation": [
          "mean",
          "median",
          "p95"
        ]
      },
  
      "distributional_characteristics": {
        "metrics": [
          "skewness",
          "kurtosis",
          "jarque_bera_p_value"
        ],
        "interpretation_note": "Used to highlight deviation from normality despite mean–variance optimization assumptions."
      }
    },
  
    "ranking_analysis": {
      "ranking_objective": "risk_adjusted_return",
  
      "ranking_metrics": [
        {
          "metric": "sharpe_ratio",
          "weight": 0.4,
          "higher_is_better": true
        },
        {
          "metric": "sortino_ratio",
          "weight": 0.3,
          "higher_is_better": true
        },
        {
          "metric": "max_drawdown",
          "weight": 0.2,
          "higher_is_better": false
        },
        {
          "metric": "conditional_value_at_risk",
          "weight": 0.1,
          "higher_is_better": false
        }
      ],
  
      "selection": {
        "top_k": 25,
        "also_report_percentiles": [
          1,
          5,
          10
        ]
      }
    },
  
    "time_sliced_performance": {
      "enabled": true,
      "slice_unit": "calendar_year",
      "metrics": [
        "mean_return",
        "volatility",
        "sharpe_ratio",
        "max_drawdown"
      ],
      "minimum_observations": 200,
      "interpretation_goal": "Evaluate robustness of BL portfolios across market regimes."
    },
  
    "views_impact_analysis": {
      "enabled": true,
      "compare_by": "views_confidence_level",
      "metrics": [
        "mean_return",
        "volatility",
        "sharpe_ratio",
        "max_drawdown"
      ],
      "interpretation_note": "Higher-confidence views should improve risk-adjusted performance without increasing drawdowns excessively."
    },
  
    "computational_performance_analysis": {
      "runtime_breakdown": {
        "stages": [
          "stage_A_precompute",
          "stage_B_expand_weights",
          "stage_C_batch_evaluate"
        ],
        "report_units": "seconds"
      },
  
      "scalability_metrics": {
        "total_portfolios": 100000,
        "runtime_per_1k_portfolios": "total_time / 100"
      },
  
      "report_note": "Demonstrates feasibility of Black–Litterman optimization at large scale via asset-set precomputation."
    },
  
    "outputs": {
      "markdown_tables": {
        "root_path": "result_analysis/classical_optimization/black_litterman/",
  
        "tables": [
          {
            "name": "bl_overall_performance_summary.md",
            "contents": [
              "mean_return",
              "volatility",
              "sharpe_ratio",
              "sortino_ratio",
              "max_drawdown",
              "calmar_ratio",
              "value_at_risk",
              "conditional_value_at_risk"
            ]
          },
          {
            "name": "bl_top_portfolios_ranking.md",
            "contents": [
              "portfolio_id",
              "mean_return",
              "sharpe_ratio",
              "sortino_ratio",
              "max_drawdown",
              "conditional_value_at_risk"
            ]
          },
          {
            "name": "bl_time_sliced_performance.md",
            "contents": [
              "year",
              "mean_return",
              "volatility",
              "sharpe_ratio",
              "max_drawdown"
            ]
          },
          {
            "name": "bl_views_confidence_comparison.md",
            "contents": [
              "views_confidence_level",
              "mean_return",
              "volatility",
              "sharpe_ratio",
              "max_drawdown"
            ]
          },
          {
            "name": "bl_runtime_profile.md",
            "contents": [
              "stage_A_precompute",
              "stage_B_expand_weights",
              "stage_C_batch_evaluate",
              "total_time",
              "runtime_per_1k_portfolios"
            ]
          }
        ]
      },
  
      "report": {
        "path": "result_analysis/classical_optimization/black_litterman/bl_analysis_report.md",
        "include_sections": [
          "experimental_setup",
          "black_litterman_model_overview",
          "portfolio_performance_summary",
          "risk_and_drawdown_analysis",
          "impact_of_investor_views",
          "temporal_robustness",
          "computational_scalability",
          "discussion"
        ]
      }
    }
  }
  