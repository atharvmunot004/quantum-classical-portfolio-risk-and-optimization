{
    "analysis_task": "cvar_classical_optimization_analysis",
  
    "analysis_principle": {
      "optimization_scope": "portfolio_level",
      "result_format": "markdown_tables_only",
      "rationale": "CVaR optimization results are best communicated through interpretable tabular summaries of tail risk, downside-adjusted performance, and portfolio structure. All outputs are rendered as Markdown tables suitable for direct inclusion in IEEE Access manuscripts."
    },
  
    "inputs": {
      "metrics_table": "results/classical_optimization/cvar_optimization_metrics.parquet",
      "frontier_table": "results/classical_optimization/cvar_return_frontier.parquet",
      "summary_report": "results/classical_optimization/cvar_optimization_report.md"
    },
  
    "analysis_scope": {
      "level": "portfolio",
      "dimensions": [
        "portfolio_id",
        "confidence_level",
        "estimation_window",
        "target_return"
      ],
      "grouping": {
        "primary": "confidence_level",
        "secondary": "estimation_window"
      }
    },
  
    "data_validation": {
      "required_metrics": [
        "expected_return",
        "conditional_value_at_risk",
        "value_at_risk",
        "max_drawdown"
      ],
      "consistency_checks": [
        {
          "name": "cvar_ge_var",
          "rule": "conditional_value_at_risk >= value_at_risk"
        },
        {
          "name": "return_defined",
          "rule": "isfinite(expected_return)"
        }
      ]
    },
  
    "primary_performance_analysis": {
      "tail_risk_focus": {
        "metrics": [
          "conditional_value_at_risk",
          "expected_shortfall",
          "worst_case_loss",
          "expected_loss_beyond_cvar"
        ],
        "aggregation": [
          "mean",
          "median",
          "p95"
        ]
      },
  
      "risk_adjusted_performance": {
        "metrics": [
          "cvar_sharpe_ratio",
          "cvar_sortino_ratio",
          "return_over_cvar",
          "cvar_calmar_ratio"
        ],
        "aggregation": [
          "mean",
          "median",
          "p95"
        ]
      },
  
      "return_tradeoff": {
        "metrics": [
          "expected_return",
          "volatility",
          "value_at_risk",
          "conditional_value_at_risk"
        ],
        "interpretation_note": "Illustrates the tradeoff between expected return and tail risk along the CVaR-efficient frontier."
      }
    },
  
    "frontier_analysis": {
      "enabled": true,
      "frontier_source": "cvar_return_frontier",
      "x_axis": "conditional_value_at_risk",
      "y_axis": "expected_return",
      "group_by": [
        "confidence_level",
        "estimation_window"
      ],
      "analysis_goals": [
        "identify_cvar_efficient_frontier",
        "compare_frontiers_across_confidence_levels",
        "assess_marginal_return_per_unit_tail_risk"
      ]
    },
  
    "portfolio_structure_analysis": {
      "metrics": [
        "num_assets_in_portfolio",
        "hhi_concentration",
        "effective_number_of_assets",
        "weight_entropy",
        "pairwise_correlation_mean"
      ],
      "aggregation": [
        "mean",
        "median"
      ],
      "interpretation_note": "CVaR optimization typically produces more diversified portfolios under tail-risk constraints."
    },
  
    "distributional_diagnostics": {
      "metrics": [
        "skewness",
        "kurtosis",
        "jarque_bera_p_value"
      ],
      "interpretation_note": "Highlights deviation from normality motivating scenario-based CVaR optimization."
    },
  
    "robustness_and_sensitivity": {
      "confidence_level_sensitivity": {
        "compare_levels": [0.95, 0.99],
        "metrics": [
          "conditional_value_at_risk",
          "return_over_cvar",
          "cvar_sharpe_ratio"
        ]
      },
  
      "window_sensitivity": {
        "compare_windows": [252, 500, 750],
        "metrics": [
          "conditional_value_at_risk",
          "expected_return"
        ]
      },
  
      "constraint_impact": {
        "metrics": [
          "hhi_concentration",
          "effective_number_of_assets",
          "max_drawdown"
        ]
      }
    },
  
    "ranking_analysis": {
      "ranking_objective": "tail_risk_adjusted_return",
  
      "ranking_metrics": [
        {
          "metric": "return_over_cvar",
          "weight": 0.4,
          "higher_is_better": true
        },
        {
          "metric": "cvar_sharpe_ratio",
          "weight": 0.3,
          "higher_is_better": true
        },
        {
          "metric": "max_drawdown",
          "weight": 0.2,
          "higher_is_better": false
        },
        {
          "metric": "hhi_concentration",
          "weight": 0.1,
          "higher_is_better": false
        }
      ],
  
      "selection": {
        "top_k": 25,
        "also_report_percentiles": [
          1,
          5,
          10
        ]
      }
    },
  
    "computational_performance_analysis": {
      "metrics": [
        "runtime_per_optimization_ms",
        "scenario_construction_time_ms",
        "solver_time_ms",
        "p95_runtime_ms"
      ],
      "aggregation": [
        "mean",
        "median",
        "p95"
      ],
      "interpretation_note": "Demonstrates scalability of linear programmingâ€“based CVaR optimization."
    },
  
    "outputs": {
      "markdown_tables": {
        "root_path": "result_analysis/classical_optimization/cvar/",
  
        "tables": [
          {
            "name": "cvar_overall_tail_risk_summary.md",
            "contents": [
              "conditional_value_at_risk",
              "expected_shortfall",
              "worst_case_loss",
              "return_over_cvar",
              "cvar_sharpe_ratio"
            ]
          },
          {
            "name": "cvar_return_frontier_summary.md",
            "contents": [
              "target_return",
              "expected_return",
              "conditional_value_at_risk",
              "value_at_risk"
            ]
          },
          {
            "name": "cvar_top_portfolios_ranking.md",
            "contents": [
              "portfolio_id",
              "expected_return",
              "conditional_value_at_risk",
              "return_over_cvar",
              "max_drawdown",
              "hhi_concentration"
            ]
          },
          {
            "name": "cvar_structure_metrics.md",
            "contents": [
              "num_assets_in_portfolio",
              "effective_number_of_assets",
              "hhi_concentration",
              "weight_entropy"
            ]
          },
          {
            "name": "cvar_runtime_profile.md",
            "contents": [
              "runtime_per_optimization_ms",
              "solver_time_ms",
              "scenario_construction_time_ms",
              "p95_runtime_ms"
            ]
          }
        ]
      },
  
      "report": {
        "path": "result_analysis/classical_optimization/cvar/cvar_analysis_report.md",
        "include_sections": [
          "experimental_setup",
          "cvar_optimization_formulation",
          "tail_risk_performance_summary",
          "cvar_return_frontier_analysis",
          "portfolio_structure_effects",
          "robustness_and_sensitivity",
          "computational_performance",
          "discussion"
        ]
      }
    }
  }
  